@model My_Restaurant.Models.Restaurant

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.RestaurantName == null)
{
    <div class="text-danger">查無結果</div>
}
else
{
    <h1 class="mb-1 restaurant-show-title">@Model.RestaurantName</h1>
    <h2 class="mb-1 restaurant-show-title">@Model.RestaurantName_EN</h2>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fa-solid fa-calendar-check"></i> 更新時間：@(Model.uploadTime != null ? Model.uploadTime.Value.ToString("yyyy/MM/dd HH:mm:ss") : "")
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-utensils pr-2"></i> 餐廳類別：@Model.Category
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-map-marker-alt pr-2"></i> 餐廳地址：@Model.Location
                        <a href="@Model.Google_map" class="text-secondary" target="_blank">
                            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-mobile-alt pr-2"></i> 餐廳電話：@Model.Phone
                    </li>
                    <li class="list-group-item">
                        餐廳描述：@Model.Description
                    </li>
                </ul>
            </div>
            <div class="col-auto col-md-6">
                <img class="rounded mx-auto d-block mb-4 w-100" src="@Model.Image" alt="@Model.RestaurantName" style="max-width: 600px;">
            </div>
        </div>
    </div>
}


