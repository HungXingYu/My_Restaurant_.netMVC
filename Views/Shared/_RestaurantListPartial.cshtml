@model IEnumerable<My_Restaurant.Models.Restaurant>


<!-- restaurant list -->
<div class="row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @if (Model == null || !Model.Any())
    {
        <div class="text-danger" id="noData">查無結果</div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col">
                <a href="/Restaurant/Detail/@item.RestaurantID" class="text-secondary">
                    <div class="card h-100">
                        <img class="card-img-top" src="@item.Image" alt="@item.RestaurantName">
                        <div class="card-body p-3">
                            <h5 class="card-title mb-1">@item.RestaurantName</h5>


                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> @item.Category/<i class="fas fa-star fa-xs"></i> @item.Rating
                            </div>

                            <div>
                                <i class="fa-solid fa-calendar-check"></i> @(item.uploadTime != null ? item.uploadTime.Value.ToString("yyyy/MM/dd HH:mm:ss") : "")  update
                            </div>

                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>



